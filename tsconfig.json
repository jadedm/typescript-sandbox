{
  "compilerOptions": { 
    "target": "es5",                          
    "module": "commonjs",                     
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "outDir": "./dist",                        
    "strict": true,                           
    "esModuleInterop": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "includes": ["src/**/*"]
}
